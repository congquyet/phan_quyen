@{
    //import file Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    //khoi tao cac bien
    string Name = Model != null ? Model.Name : "";
    string Email = Model != null ? Model.Email : "";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                @{
                    var strNotify = Context.Request.Query["notify"].ToString();
                }
                @if (!String.IsNullOrEmpty(strNotify))
                {
                    <div class="alert alert-warning">Email đã tồn tại, xin mời chọn email khác</div>
                }
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                    <div class="card-body">
                        <form method="post" action="@ViewBag.action">
                            <!-- rows -->
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2">Name</div>
                                <div class="col-md-10">
                                    <input type="text" value="@Name" name="Name" class="form-control" required>
                                </div>
                            </div>
                            <!-- end rows -->
                            <!-- rows -->
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2">Email</div>
                                <div class="col-md-10">
                                    <input type="email" value="@Email" name="Email" class="form-control" required>
                                </div>
                            </div>
                            <!-- end rows -->
                            <!-- rows -->
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2">Password</div>
                                <div class="col-md-10">
                                    @{
                                        string strCheck = "";
                                        //neu Email co du lieu -> co nghia la Update
                                        if (!String.IsNullOrEmpty(Email))
                                        {
                                            strCheck = "placeholder='Không đổi password thì không nhập thông tin vào ô textbox này'";
                                        }
                                        //neu Email khong co du lieu -> co nghia la Create
                                        else
                                        {
                                            strCheck = "required";
                                        }
                                    }
                                    <input type="password" name="Password" @Html.Raw(strCheck) class="form-control">
                                </div>
                            </div>
                            <!-- end rows -->
                            <!-- rows -->
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2"></div>
                                <div class="col-md-10">
                                    <input type="submit" value="Process" class="btn btn-primary">
                                </div>
                            </div>
                            <!-- end rows -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
